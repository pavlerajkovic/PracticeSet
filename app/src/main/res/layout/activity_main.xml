<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            style="@style/VerticalLayoutStyle">

            <TextView
                android:id="@+id/team_a"
                style="@style/TeamNameStyle"
                android:text="@string/team_a"/>

            <TextView
                android:id="@+id/team_a_score"
                style="@style/ScoreStyle"
                android:text="0"/>

            <Button
                android:id="@+id/team_a_two_points"
                style="@style/ButtonStyle"
                android:onClick="scoreTeamA"
                android:text="@string/point_two"/>

            <Button
                android:id="@+id/team_a_three_points"
                style="@style/ButtonStyle"
                android:onClick="scoreTeamA"
                android:text="@string/point_three"/>

            <Button
                android:id="@+id/team_a_one_point"
                style="@style/ButtonStyle"
                android:onClick="scoreTeamA"
                android:text="@string/point_one"/>

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#BDBDBD"/>

        <LinearLayout
            style="@style/VerticalLayoutStyle">

            <TextView
                android:id="@+id/team_b"
                style="@style/TeamNameStyle"
                android:text="@string/team_b"/>

            <TextView
                android:id="@+id/team_b_score"
                style="@style/ScoreStyle"
                android:text="0"/>

            <Button
                android:id="@+id/team_b_two_points"
                style="@style/ButtonStyle"
                android:onClick="scoreTeamB"
                android:text="@string/point_two"/>

            <Button
                android:id="@+id/team_b_three_points"
                style="@style/ButtonStyle"
                android:onClick="scoreTeamB"
                android:text="@string/point_three"/>

            <Button
                android:id="@+id/team_b_one_point"
                style="@style/ButtonStyle"
                android:onClick="scoreTeamB"
                android:text="@string/point_one"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorSecondary"
        android:onClick="startNewGame"
        android:text="@string/new_game"
        android:textColor="@android:color/white"/>

</RelativeLayout>